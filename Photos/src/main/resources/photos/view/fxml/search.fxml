<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.controller.SearchController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Search Photos" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox spacing="10.0" prefWidth="350.0">
         <children>
            <Label text="Search Criteria" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <VBox spacing="5.0">
               <children>
                  <RadioButton fx:id="dateRangeRadio" text="Date Range" selected="true" />
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Start:" />
                        <DatePicker fx:id="startDatePicker" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="End:" />
                        <DatePicker fx:id="endDatePicker" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Separator />
            <VBox spacing="5.0">
               <children>
                  <RadioButton fx:id="singleTagRadio" text="Single Tag" />
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Type:" />
                        <ComboBox fx:id="tagType1ComboBox" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Value:" />
                        <TextField fx:id="tagValue1Field" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Separator />
            <VBox spacing="5.0">
               <children>
                  <RadioButton fx:id="tagAndRadio" text="Tag AND" />
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Type 2:" />
                        <ComboBox fx:id="tagType2ComboBox" prefWidth="120.0" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Value 2:" />
                        <TextField fx:id="tagValue2Field" prefWidth="100.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Separator />
            <VBox spacing="5.0">
               <children>
                  <RadioButton fx:id="tagOrRadio" text="Tag OR" />
               </children>
            </VBox>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox spacing="10.0">
         <children>
            <Label text="Search Results" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ListView fx:id="resultsListView" prefHeight="500.0" prefWidth="400.0" />
            <Button fx:id="createAlbumButton" disable="true" mnemonicParsing="false" onAction="#handleCreateAlbum" text="Create Album from Results" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
