<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.controller.UserDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="My Albums" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label text="Album Name:" />
                  <TextField fx:id="albumNameField" promptText="Enter album name" prefWidth="200.0" />
                  <Button fx:id="createAlbumButton" mnemonicParsing="false" onAction="#handleCreateAlbum" text="Create Album" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <ListView fx:id="albumListView" prefHeight="400.0" prefWidth="600.0" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="openAlbumButton" disable="true" mnemonicParsing="false" onAction="#handleOpenAlbum" text="Open Album" />
                  <Button fx:id="renameAlbumButton" disable="true" mnemonicParsing="false" onAction="#handleRenameAlbum" text="Rename Album" />
                  <Button fx:id="deleteAlbumButton" disable="true" mnemonicParsing="false" onAction="#handleDeleteAlbum" text="Delete Album" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="Search Photos" />
                  <Button fx:id="manageTagTypesButton" mnemonicParsing="false" onAction="#handleManageTagTypes" text="Manage Tag Types" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
