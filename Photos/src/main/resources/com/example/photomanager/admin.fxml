<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.photomanager.controller.AdminController">
    <top>
        <MenuBar>
            <Menu text="Actions">
                <MenuItem fx:id="logoutMenuItem" onAction="#handleLogout" text="Logout"/>
                <MenuItem fx:id="quitMenuItem" onAction="#handleQuit" text="Exit Application"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="20" >
            <Label text="User List:"/>
            <ListView fx:id="usersListView" prefHeight="300"/>
            <HBox spacing="10">
                <TextField fx:id="usernameField" promptText="Username"/>
                <TextField fx:id="passwordField" promptText="Password"/>
                <Button fx:id="createUserButton" onAction="#handleCreateUser" text="Create User"/>
            </HBox>
            <Button fx:id="deleteUserButton" onAction="#handleDeleteUser" text="Delete Selected User"/>
        </VBox>
    </center>
</BorderPane>
